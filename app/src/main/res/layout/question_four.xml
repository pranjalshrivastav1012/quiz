<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor">


    <TextView
        android:id="@+id/score_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/question_no4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question 4/10"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/questionnocolor"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/question_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Who is the founder of ONE PLUS ?"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn1_q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lee Byung- Chul"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/btn2_q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tony Chen"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/btn3_q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pete Lau"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/btn4_q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steve Jobs"
        android:textAllCaps="false"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>



</LinearLayout>