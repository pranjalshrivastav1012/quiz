<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Backgroundcolor">

    <TextView
        android:id="@+id/score_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/question_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Question 2/10"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/questionnocolor"
        android:textStyle="bold"/>


    <ImageView
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/githublogo"
        android:textAlignment="center"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Identify the name of this logo?"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btn1_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Cloud"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/btn2_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alexa"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/btn3_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Github."
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>

    <Button
        android:id="@+id/btn4_q2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dev"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/custom_button"/>






</LinearLayout>